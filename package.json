{
  "name": "splitify",
  "displayName": "Splitify",
  "description": "Turn messy, uncommitted changes into clean, atomic commits. Analyzes your local modifications, groups them by intent using Copilot AI, and suggests meaningful commit messages.",
  "version": "1.0.1",
  "publisher": "Oktuvida",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GH-Jaider/splitify.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Machine Learning"
  ],
  "keywords": [
    "git",
    "commits",
    "ai",
    "copilot",
    "productivity",
    "atomic commits"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "splitify.analyze",
        "title": "Analyze & Group Changes",
        "icon": "$(group-by-ref-type)",
        "category": "Splitify"
      },
      {
        "command": "splitify.commitGroup",
        "title": "Commit This Group",
        "icon": "$(check)",
        "category": "Splitify"
      },
      {
        "command": "splitify.commitAll",
        "title": "Commit All Groups",
        "icon": "$(check-all)",
        "category": "Splitify"
      },
      {
        "command": "splitify.discardGroup",
        "title": "Discard Group",
        "icon": "$(trash)",
        "category": "Splitify"
      },
      {
        "command": "splitify.editGroupMessage",
        "title": "Edit Commit Message",
        "icon": "$(edit)",
        "category": "Splitify"
      },
      {
        "command": "splitify.refresh",
        "title": "Refresh Analysis",
        "icon": "$(refresh)",
        "category": "Splitify"
      },
      {
        "command": "splitify.commitSelected",
        "title": "Commit Selected Groups",
        "icon": "$(checklist)",
        "category": "Splitify"
      },
      {
        "command": "splitify.moveFile",
        "title": "Move to Another Group",
        "icon": "$(move)",
        "category": "Splitify"
      },
      {
        "command": "splitify.removeFile",
        "title": "Remove from Group",
        "icon": "$(remove)",
        "category": "Splitify"
      },
      {
        "command": "splitify.createGroup",
        "title": "Create New Group",
        "icon": "$(add)",
        "category": "Splitify"
      },
      {
        "command": "splitify.addFileToGroup",
        "title": "Add to Group",
        "icon": "$(add)",
        "category": "Splitify"
      },
      {
        "command": "splitify.selectModel",
        "title": "Select AI Model",
        "icon": "$(hubot)",
        "category": "Splitify"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "splitify.analyze",
          "group": "navigation@1",
          "when": "scmProvider == git"
        },
        {
          "command": "splitify.commitAll",
          "group": "navigation@2",
          "when": "scmProvider == git && splitify.hasGroups"
        }
      ],
      "view/title": [
        {
          "command": "splitify.refresh",
          "when": "view == splitify.groupsView",
          "group": "navigation"
        },
        {
          "command": "splitify.createGroup",
          "when": "view == splitify.groupsView",
          "group": "navigation"
        },
        {
          "command": "splitify.commitAll",
          "when": "view == splitify.groupsView && splitify.hasGroups",
          "group": "navigation"
        },
        {
          "command": "splitify.commitSelected",
          "when": "view == splitify.groupsView && splitify.hasGroups",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "splitify.commitGroup",
          "when": "view == splitify.groupsView && viewItem == commitGroup",
          "group": "inline@1"
        },
        {
          "command": "splitify.editGroupMessage",
          "when": "view == splitify.groupsView && viewItem == commitGroup",
          "group": "inline@2"
        },
        {
          "command": "splitify.discardGroup",
          "when": "view == splitify.groupsView && viewItem == commitGroup",
          "group": "inline@3"
        },
        {
          "command": "splitify.moveFile",
          "when": "view == splitify.groupsView && viewItem == groupFile",
          "group": "inline@1"
        },
        {
          "command": "splitify.removeFile",
          "when": "view == splitify.groupsView && viewItem == groupFile",
          "group": "inline@2"
        },
        {
          "command": "splitify.addFileToGroup",
          "when": "view == splitify.groupsView && viewItem == ungroupedFile",
          "group": "inline@1"
        }
      ]
    },
    "views": {
      "scm": [
        {
          "id": "splitify.groupsView",
          "name": "Splitify - Commit Groups",
          "icon": "$(group-by-ref-type)",
          "when": "splitify.hasGroups",
          "contextualTitle": "Splitify"
        }
      ]
    },
    "configuration": {
      "title": "Splitify",
      "properties": {
        "splitify.maxFilesPerGroup": {
          "type": "number",
          "default": 10,
          "description": "Maximum files to include in a single commit group"
        },
        "splitify.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications after commits"
        },
        "splitify.preCommitStrategy": {
          "type": "string",
          "enum": [
            "run-once",
            "run-per-group",
            "skip"
          ],
          "enumDescriptions": [
            "Run pre-commit hooks once for all files before committing groups (recommended)",
            "Run pre-commit hooks on each individual group commit (slower but thorough)",
            "Skip all pre-commit hooks when committing groups"
          ],
          "default": "run-once",
          "description": "How to handle pre-commit hooks when committing groups"
        },
        "splitify.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns for files to exclude from Splitify analysis (e.g., ['*.lock', 'dist/**'])"
        }
      }
    },
    "keybindings": [
      {
        "command": "splitify.selectModel",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vscode-test",
    "test:unit": "vscode-test --label unit",
    "test:integration": "vscode-test --label integration",
    "marketplace:package": "pnpm vsce package --no-dependencies",
    "marketplace:publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "minimatch": "^10.2.0",
    "simple-git": "^3.30.0"
  }
}
